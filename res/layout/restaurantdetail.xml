<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <RelativeLayout
            android:id="@+id/rd_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingTop="5dp" >
            <Button
                android:id="@+id/rd_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="@string/follow"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/rd_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:clickable="false"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/user_headpic_default" />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/rd_follow"
                android:layout_toRightOf="@+id/rd_logo"
                android:orientation="vertical" >
                <TableRow>
                    <TextView
                        android:id="@+id/rd_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name" />
                    <TextView
                        android:id="@+id/rd_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/rd_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tel" />
                    <TextView
                        android:id="@+id/rd_tel_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/num" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/rd_sms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sms" />
                    <TextView
                        android:id="@+id/rd_sms_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/num" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/rd_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address" />
                    <TextView
                        android:id="@+id/rd_location_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/word" />
                </TableRow>
            </TableLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/rd_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rd_up"
            android:orientation="horizontal"
            android:paddingTop="5dp" >
            <Button
                android:id="@+id/rd_employee"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/employee" />
            <Button
                android:id="@+id/rd_vip"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/vip" />
            <Button
                android:id="@+id/bill"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/bill" />
            <Button
                android:id="@+id/store"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/store" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rd_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rd_mid"
            android:layout_margin="5dp" >
            <TextView
                android:id="@+id/rd_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/intro" />
            <TextView
                android:id="@+id/rd_intro_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/rd_intro"
                android:maxLines="5"
                android:minLines="3"
                android:text="@string/word" />
        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/rd_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#77000000"
        android:contentDescription="@string/app_name"
        android:visibility="gone" />
</FrameLayout>