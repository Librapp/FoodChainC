<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dp" >
    <ImageView
        android:id="@+id/case_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/danchaofan" />
    <TextView
        android:id="@+id/case_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/case_pic"
        android:text="@string/name"
        android:textColor="@android:color/black"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/case_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/case_name"
        android:layout_toRightOf="@+id/case_pic"
        android:text="@string/price"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/case_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:text="@string/state" />
    <!-- 以后在这里加上根据原料数量动态计算显示可以做的份数 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="3dp"
        android:orientation="horizontal" >
        <ImageButton
            android:id="@+id/plus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/plus" />
        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:background="@color/white"
            android:text="@string/zero"
            android:textColor="@color/black" />
        <ImageButton
            android:id="@+id/minus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/minus" />
    </LinearLayout>
</RelativeLayout>