<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <!-- 菜单标题 -->
    <RelativeLayout
        android:id="@+id/menu_title"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/all_title" >
        <ToggleButton
            android:id="@+id/menu_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:checked="true"
            android:gravity="top|center_horizontal"
            android:textColor="@android:color/white"
            android:textOff="@string/style"
            android:textOn="@string/time" />
        <TextView
            style="@style/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/menu" />
        <Button
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:background="@drawable/button"
            android:text="@string/edit"
            android:visibility="gone" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/weekday_menu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/menu_title" >
        <!-- 一周日期 -->
        <RelativeLayout
            android:id="@+id/weekday_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#cecece"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/now_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="3dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:lines="2"
                android:text="@string/date"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
            <Gallery
                android:id="@+id/day_pager"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/now_date"
                android:background="@android:color/transparent"
                android:gravity="left|center_vertical"
                android:spacing="20dp" />
            <!-- 一天时间段 -->
            <RelativeLayout
                android:id="@+id/daytime_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/day_pager"
                android:layout_toRightOf="@+id/now_date"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="@string/create"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
                <Gallery
                    android:id="@+id/time_pager"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:layout_toLeftOf="@+id/create_time"
                    android:background="@android:color/transparent"
                    android:gravity="left|center_vertical"
                    android:spacing="20dp" />
            </RelativeLayout>
        </RelativeLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/menu_pager"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_below="@+id/weekday_layout"
            android:background="#ffffff"
            android:fadingEdge="vertical" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/all_menu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/menu_title"
        android:orientation="horizontal"
        android:visibility="gone" >
        <!-- 类型 -->
        <RelativeLayout
            android:id="@+id/style_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#cecece"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/create_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="@string/create"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
            <Gallery
                android:id="@+id/style_pager"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@+id/create_style"
                android:background="@android:color/transparent"
                android:gravity="left|center_vertical"
                android:spacing="20dp" />
        </RelativeLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/allstyle_pager"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_below="@+id/style_layout"
            android:background="#ffffff"
            android:fadingEdge="vertical" />
    </RelativeLayout>
</RelativeLayout>